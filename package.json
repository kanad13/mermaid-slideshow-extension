{
	"name": "mermaid-slideshow",
	"displayName": "Mermaid Slideshow",
	"description": "Preview Mermaid diagrams in a focused, navigable slideshow with keyboard controls and live updates as you edit.",
	"version": "1.1.2",
	"icon": "assets/icon.png",
	"publisher": "KunalPathak",
	"author": "Kunal Pathak",
	"homepage": "https://github.com/kanad13/mermaid-slideshow-extension",
	"bugs": {
		"url": "https://github.com/kanad13/mermaid-slideshow-extension/issues"
	},
	"engines": {
		"vscode": "^1.109.0",
		"node": ">=18.0.0"
	},
	"categories": [
		"Other",
		"Visualization"
	],
	"keywords": [
		"mermaid",
		"slideshow",
		"presentation",
		"diagrams",
		"flowchart",
		"sequence diagram",
		"markdown",
		"preview"
	],
	"qna": "marketplace",
	"galleryBanner": {
		"color": "#0D47A1",
		"theme": "dark"
	},
	"main": "./src/extension.js",
	"activationEvents": [
		"onLanguage:markdown"
	],
	"contributes": {
		"commands": [
			{
				"command": "mermaidSlideshow.showPreview",
				"title": "Show Mermaid Slideshow",
				"category": "Mermaid",
				"icon": {
					"light": "assets/icon-presentation.svg",
					"dark": "assets/icon-presentation.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "mermaidSlideshow.showPreview",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "Mermaid Slideshow",
			"properties": {
				"mermaidSlideshow.theme": {
					"type": "string",
					"default": "default",
					"enum": [
						"default",
						"dark",
						"forest",
						"neutral"
					],
					"enumDescriptions": [
						"Auto-detect from VS Code theme (uses dark for dark/high-contrast themes)",
						"Dark background, light text",
						"Green-toned, nature-inspired palette",
						"Grayscale, high-contrast, print-friendly"
					],
					"description": "Color theme for rendered Mermaid diagrams. When set to 'default', automatically matches your VS Code color theme."
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"test": "node --test 'test/**/*.test.js' && npm run lint",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@eslint/js": "^10.0.1",
		"@types/node": "^25.2.3",
		"@types/vscode": "^1.109.0",
		"@vscode/vsce": "^3.7.1",
		"eslint": "^10.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kanad13/mermaid-slideshow-extension.git"
	},
	"license": "MIT",
	"pricing": "Free"
}
