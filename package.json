{
	"name": "mermaid-slideshow",
	"displayName": "Mermaid Slideshow",
	"description": "Extract Mermaid diagrams from markdown files and present them as a navigable slideshow.",
	"version": "0.1.0",
	"icon": "assets/icon.png",
	"publisher": "KunalPathak",
	"author": "Kunal Pathak",
	"homepage": "https://github.com/kanad13/mermaid-slideshow",
	"bugs": {
		"url": "https://github.com/kanad13/mermaid-slideshow/issues"
	},
	"engines": {
		"vscode": "^1.109.0",
		"node": ">=18.0.0"
	},
	"categories": [
		"Other",
		"Visualization"
	],
	"keywords": [
		"mermaid",
		"slideshow",
		"presentation",
		"diagrams",
		"flowchart",
		"sequence diagram",
		"markdown",
		"preview"
	],
	"qna": "marketplace",
	"galleryBanner": {
		"color": "#0D47A1",
		"theme": "dark"
	},
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mermaidSlideshow.showPreview",
				"title": "Show Mermaid Slideshow",
				"category": "Mermaid",
				"icon": {
					"light": "assets/icon-presentation.svg",
					"dark": "assets/icon-presentation.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "mermaidSlideshow.showPreview",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"build": "webpack",
		"lint": "eslint .",
		"test": "npm run lint",
		"package": "npm run build && vsce package",
		"publish": "npm run build && vsce publish"
	},
	"devDependencies": {
		"@eslint/js": "^10.0.1",
		"@types/node": "^25.2.3",
		"@types/vscode": "^1.109.0",
		"@vscode/vsce": "^3.7.1",
		"eslint": "^10.0.0",
		"webpack": "^5.105.2",
		"webpack-cli": "^6.0.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kanad13/mermaid-slideshow.git"
	},
	"license": "MIT",
	"pricing": "Free"
}
