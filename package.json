{
	"name": "mermaid-slides-preview",
	"displayName": "Mermaid Slides Preview",
	"description": "Extract Mermaid diagrams from markdown files and preview them as a navigable slideshow.",
	"version": "0.1.0",
	"icon": "assets/icon.png",
	"publisher": "KunalPathak",
	"author": "Kunal Pathak",
	"homepage": "https://github.com/kanad13/mermaid-slides-preview",
	"bugs": {
		"url": "https://github.com/kanad13/mermaid-slides-preview/issues"
	},
	"engines": {
		"vscode": "^1.85.0",
		"node": ">=18.0.0"
	},
	"categories": [
		"Other",
		"Visualization"
	],
	"keywords": [
		"mermaid",
		"slides",
		"preview",
		"diagrams",
		"slideshow",
		"flowchart",
		"sequence diagram",
		"markdown",
		"presentation"
	],
	"qna": "marketplace",
	"galleryBanner": {
		"color": "#0D47A1",
		"theme": "dark"
	},
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mermaidSlides.showPreview",
				"title": "Show Mermaid Slides Preview",
				"category": "Mermaid",
				"icon": {
					"light": "assets/icon-presentation.svg",
					"dark": "assets/icon-presentation.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "mermaidSlides.showPreview",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"build": "webpack",
		"lint": "eslint .",
		"test": "npm run lint",
		"package": "npm run build && vsce package",
		"publish": "npm run build && vsce publish"
	},
	"dependencies": {},
	"devDependencies": {
		"@babel/core": "^7.25.0",
		"@babel/preset-env": "^7.25.0",
		"@types/node": "^24.9.2",
		"@types/vscode": "^1.85.0",
		"@vscode/test-electron": "^2.4.6",
		"@vscode/vsce": "^3.6.2",
		"babel-loader": "^10.0.0",
		"eslint": "^9.39.0",
		"webpack": "^5.92.0",
		"webpack-cli": "^6.0.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kanad13/mermaid-slides-preview.git"
	},
	"license": "MIT",
	"pricing": "Free"
}
